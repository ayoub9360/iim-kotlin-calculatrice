<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fond"
    tools:context="MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#2EFFFFFF"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Calculatrice" />

        <EditText
            android:id="@+id/number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#ffffff"
            android:hint="Nombre 1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#ffffff"
            android:hint="Nombre 2"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="RÃ©sultat: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#2b3bcc"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <Button
                android:id="@+id/substract"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/moins"
                android:backgroundTint="#2bcccc"
                android:text="-"
                android:layout_marginLeft="6dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <Button
                android:id="@+id/divide"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/diviser"
                android:backgroundTint="#83cc2b"
                android:text="/"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="6dp"
                android:textSize="16sp" />
            <Button
                android:id="@+id/multiply"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/multiplier"
                android:backgroundTint="#F44336"
                android:text="*"
                android:layout_marginLeft="6dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>